<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="13dp"
    android:layout_marginEnd="15dp"
    android:background="@color/lightgreen"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/eachRowId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="7dp"
        android:paddingVertical="4dp"
        >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noteTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:text="Assignment"
                android:textColor="@color/lightgreen"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/noteContentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans"
                android:text="Have to complete POC and AOS assignment by saturday"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/editIconId"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/editIcon"
                android:padding="8dp"
                android:src="@drawable/edit_icon" />

            <ImageView
                android:id="@+id/deleteIconId"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/deleteIcon"
                android:padding="8dp"
                android:src="@drawable/delete_icon" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>